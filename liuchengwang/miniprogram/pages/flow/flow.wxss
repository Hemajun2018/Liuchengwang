/* 流程页面样式 */
.container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 项目标题样式 */
.project-header {
  width: 100%;
  text-align: center;
  margin-bottom: 40rpx;
}

.project-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1890ff;
  margin-bottom: 10rpx;
}

.project-subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 流程图样式 */
.flow-chart {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 元素盒子样式 */
.element-box {
  width: 220rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 12rpx;
  margin: 10rpx;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s ease-out;
  will-change: transform, box-shadow;
  -webkit-tap-highlight-color: transparent;
}

/* 元素悬停效果 */
.element-hover {
  transform: scale(1.03);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.12);
}

/* 元素图标 */
.element-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

/* 元素文本 */
.element-text {
  font-size: 26rpx;
  font-weight: bold;
}

/* 元素状态指示器 */
.element-status {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #faad14;
}

.element-status.completed {
  background-color: #52c41a;
}

/* 元素类型样式 */
.precondition {
  background-color: #e6f7ff;
  border: 1px solid #91d5ff;
}

.problem {
  background-color: #fff2e8;
  border: 1px solid #ffbb96;
}

.material {
  background-color: #f6ffed;
  border: 1px solid #b7eb8f;
}

.node {
  background-color: #f9f0ff;
  border: 1px solid #d3adf7;
}

.result {
  background-color: #fcffe6;
  border: 1px solid #eaff8f;
}

/* 元素行样式 */
.element-row {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
}

/* 连接线容器 */
.connector-container {
  display: flex;
  justify-content: center;
  align-items: center;
}

.connector-container.horizontal {
  width: 60rpx;
}

/* 连接线样式 */
.connector {
  background-color: #1890ff;
}

.connector.vertical {
  width: 4rpx;
  height: 50rpx;
  border-radius: 4rpx;
}

.connector.horizontal {
  width: 60rpx;
  height: 4rpx;
  border-radius: 4rpx;
}

/* 加载和错误提示 */
.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
}

.error-message {
  text-align: center;
  padding: 30rpx;
  color: #ff4d4f;
}