page {
  height: 100vh;
  background-color: #f5f7fa;
}

.container {
  padding: 30rpx;
  padding-bottom: 120rpx; /* 确保底部有足够空间 */
}

.detail-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.status-tag {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  color: #fff;
}

.status-0 {
  background-color: #909399;
}

.status-1 {
  background-color: #409eff;
}

.status-2 {
  background-color: #67c23a;
}

.status-3 {
  background-color: #e6a23c;
}

.card-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.section-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
}

.info-row {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 30rpx;
}

.info-label {
  color: #666;
  width: 160rpx;
}

.info-value {
  color: #333;
  flex: 1;
}

.status-text {
  font-weight: 500;
}

.status-text.status-0 {
  color: #909399;
}

.status-text.status-1 {
  color: #409eff;
}

.status-text.status-2 {
  color: #67c23a;
}

.status-text.status-3 {
  color: #e6a23c;
}

.action-buttons {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.action-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.back-btn {
  background-color: #4285f4;
  color: #fff;
}

/* 调试信息样式 */
.debug-section {
  display: none;
}

.debug-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  white-space: pre-wrap;
  word-break: break-all;
}

.debug-content text {
  display: block;
  margin-bottom: 8rpx;
}

/* 状态文本显示样式 */
.status-text-display {
  display: inline-block;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  padding: 8rpx 0;
} 