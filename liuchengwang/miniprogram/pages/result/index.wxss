page {
  height: 100vh;
  background-color: #f5f7fa;
}

.container {
  padding: 24rpx;
  padding-bottom: 120rpx;
  box-sizing: border-box;
  width: 100%;
}

/* 祝贺横幅样式 */
.congratulation-banner {
  background: linear-gradient(135deg, #ff9a9e, #fad0c4);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(255, 154, 158, 0.3);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  text-align: center;
  animation: fadeIn 0.8s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.congratulation-icon {
  font-size: 90rpx;
  margin-bottom: 20rpx;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-15rpx); }
}

.congratulation-text {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.congratulation-subtext {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 卡片通用样式 */
.info-card, .results-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
  animation: slideUp 0.5s ease-out;
}

@keyframes slideUp {
  from { opacity: 0; transform: translateY(30rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.info-card {
  animation-delay: 0.2s;
}

.results-card {
  animation-delay: 0.4s;
}

/* 卡片头部样式 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.header-left {
  display: flex;
  align-items: center;
}

.header-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.status-tag {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  color: #fff;
  font-weight: 500;
}

.result-count {
  font-size: 26rpx;
  color: #999;
  background: #f5f7fa;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

/* 项目信息内容样式 */
.info-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.info-item {
  display: flex;
  align-items: flex-start;
  padding: 16rpx;
  background: #f9f9f9;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.info-item:hover {
  background: #f0f7ff;
  transform: translateX(5rpx);
}

.info-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  min-width: 36rpx;
  text-align: center;
}

.info-detail {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.info-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

/* 成果列表样式 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
}

.result-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.result-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f9f9f9;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
  transition: all 0.3s ease;
}

.result-item:hover {
  transform: translateX(8rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.result-number {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  background: #4285f4;
  color: white;
  border-radius: 50%;
  font-weight: bold;
  font-size: 30rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.result-content {
  flex: 1;
}

.result-text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.5;
  word-break: break-all;
}

/* 状态颜色 */
.status-0 {
  background-color: #909399;
}

.status-1 {
  background-color: #409eff;
}

.status-2 {
  background-color: #67c23a;
}

.status-3 {
  background-color: #e6a23c;
}

.status-text-0 {
  color: #909399;
}

.status-text-1 {
  color: #409eff;
}

.status-text-2 {
  color: #67c23a;
}

.status-text-3 {
  color: #e6a23c;
}

/* 底部操作区样式 */
.action-buttons {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  animation: fadeIn 0.5s ease-out;
  animation-delay: 0.6s;
}

.action-btn {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 20rpx rgba(66, 133, 244, 0.3);
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 10rpx rgba(66, 133, 244, 0.2);
}

.back-btn {
  background-color: #4285f4;
  color: #fff;
}

.btn-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

.btn-text {
  font-size: 32rpx;
}

/* 添加按钮样式 */
.add-btn {
  background: #e6f7ff;
  color: #1890ff;
}

.add-btn .btn-text {
  color: #1890ff;
}

/* 刷新按钮样式 */
.refresh-btn {
  background: #f6ffed;
  color: #52c41a;
}

.refresh-btn .btn-text {
  color: #52c41a;
}

/* 按钮悬停效果 */
.action-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
} 