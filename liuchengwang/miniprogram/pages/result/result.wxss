/* 成果详情页面样式 */
.container {
  padding: 30rpx;
}

.detail-box {
  width: 100%;
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  overflow: hidden;
}

.congratulation {
  background-color: #f6ffed;
  padding: 20rpx;
  text-align: center;
  color: #52c41a;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 1px solid #eee;
}

.content {
  padding: 30rpx;
}

.result-header {
  display: flex;
  border-bottom: 1px solid #eee;
  padding-bottom: 15rpx;
  margin-bottom: 15rpx;
}

.header-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.result-item {
  display: flex;
  padding: 15rpx 0;
  border-bottom: 1px solid #eee;
}

.result-item:last-child {
  border-bottom: none;
}

.item-cell {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: #666;
}

.file {
  color: #1890ff;
  text-decoration: underline;
}

.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
}

.error-message {
  text-align: center;
  padding: 30rpx;
  color: #ff4d4f;
}