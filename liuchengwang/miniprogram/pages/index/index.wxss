/**index.wxss**/
page {
  height: 100vh;
  background-color: #f5f7fa;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 60rpx 50rpx;
  box-sizing: border-box;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
}

.logo-box {
  margin-bottom: 30rpx;
}

.logo-text {
  width: 180rpx;
  height: 180rpx;
  background-color: #4285f4;
  color: white;
  font-size: 48rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(66, 133, 244, 0.3);
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #4285f4;
  margin-bottom: 20rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: #666;
}

.login-form {
  width: 100%;
  margin-top: 80rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 90rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.login-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #4285f4;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 12rpx;
  margin-top: 60rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.footer {
  margin-top: 80rpx;
}

.copyright {
  font-size: 24rpx;
  color: #999;
}
