/* 节点详情页面样式 */
.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
  overflow: hidden;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.card-content {
  padding: 30rpx;
}

/* 项目名称样式 */
.project-name {
  font-size: 36rpx;
  color: #1890ff;
  font-weight: bold;
  text-align: center;
}

/* 状态徽章 */
.status-badge {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  line-height: 1.2;
}

.status-badge.pending {
  background-color: #fff7e6;
  color: #faad14;
  border: 1px solid #ffd591;
}

.status-badge.completed {
  background-color: #f6ffed;
  color: #52c41a;
  border: 1px solid #b7eb8f;
}

/* 信息列表样式 */
.info-list {
  width: 100%;
}

.info-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #666;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 加载和错误提示 */
.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
  background-color: #fff;
  border-radius: 12rpx;
  margin-top: 20rpx;
}

.error-message {
  text-align: center;
  padding: 30rpx;
  color: #ff4d4f;
  background-color: #fff;
  border-radius: 12rpx;
  margin-top: 20rpx;
}