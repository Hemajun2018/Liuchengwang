.navigation-bar {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
}

.navigation-bar__inner {
  display: flex;
  align-items: center;
  height: 44px;
  width: 100%;
}

.navigation-bar__left {
  padding-left: 16px;
}

.navigation-bar__center {
  flex: 1;
  text-align: center;
  font-size: 17px;
  font-weight: bold;
}

.navigation-bar__buttons {
  display: flex;
  align-items: center;
}

.navigation-bar__button_back {
  font-size: 15px;
  color: inherit;
}
